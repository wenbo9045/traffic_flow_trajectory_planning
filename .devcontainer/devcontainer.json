{
  "name": "ROS-Noetic",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-20.04",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.9",
      "installTools": true
    }
  },
  "runArgs": ["--net=host"],
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-iot.vscode-ros"]
    }
  }
}
